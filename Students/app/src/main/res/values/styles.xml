<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewMainStyle" parent="Widget.MaterialComponents.TextView">
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet_fragment</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TextViewMainStyle.TextView_16sp">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="TextViewMainStyle.TextView_16sp.EditText">
        <item name="android:layout_height">57dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:layout_marginEnd">22dp</item>
        <item name="android:background">@drawable/background_10dp_rectangle</item>
        <item name="android:backgroundTint">#F1F4FA</item>
        <item name="android:padding">19dp</item>
    </style>
</resources>